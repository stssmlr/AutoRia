@using AutoRia.Entities
@model List<Car>

<h1>Archived Cars</h1>
<p>You can manage Archived Cars here</p>



<div class="container">
    <table class="table">
        <thead>
            <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Mark</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Discount</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@i.Id</th>
                    <td>
                        @i.Mark
                        @if (i.Discount > 0)
                        {
                            <span class="badge bg-primary">SALE</span>
                        }
                    </td>
                    <td>
                        @i.Model
                    </td>
                    <td>
                        @i.Year
                    </td>
                    <td>
                        @i.Category?.Name
                    </td>
                    <td>
                        @if (i.Discount > 0)
                        {
                            <span>@(i.Price - i.Price / 100 * i.Discount)$</span>
                            <del>@i.Price</del>
                        }
                        else
                        {
                            <span>@i.Price$</span>
                        }
                    </td>
                    <td>
                        @(i.Discount > 0 ? i.Discount + "%" : "-")
                    </td>
                    <td>
                        @if (i.Quantity > 0)
                        {
                            <span class="badge bg-success">In Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Out of Stock</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Cars" asp-action="RestoreItem" asp-route-id="@i.Id" class="btn btn-outline-warning">
                            <i class="bi bi-arrow-counterclockwise"></i>
                        </a>

                        <a asp-controller="Cars" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<p>Count : @Model.Count</p>

<div>
    <a asp-action="Index" class="btn btn-secondary">x
        <i class="bi bi-arrow-left"></i>
        <span>Go Back</span>
    </a>
</div>